from gtts import gTTS
import os
mytext = 'Welcomes You To Practical Of Natural Language Processing By Vignesh'
language = 'en'
myobj = gTTS(text=mytext, lang=language, slow=False)
myobj.save("NLP-1B.wav")
os.system("NLP-1B.wav") 

import speech_recognition as sr
AUDIO_FILE = ("harvad.wav")
r = sr.Recognizer()
with sr.AudioFile(AUDIO_FILE) as source:
 audio = r.record(source)
print("Practical performed by Vignesh Nadar")
try:
 print("The audio file contains: \n" + r.recognize_google(audio))
except sr.UnknownValueError:
 print("Google Speech Recognition could not understand audio")
except sr.RequestError as e:
 print("Could not request results from Google Speech Recognition service; {0}".format(e)) 
